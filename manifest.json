{
  "browser_action": {
    "browser_style": true,
    "default_title": "Detection of privacy violations",
    "default_popup": "popup/popup.html"
  },

  "description": "Detection of privacy violations",
  "manifest_version": 2,
  "name": "Detection of privacy violations",
  "version": "1.0",

  "icons": {
    "16": "icons/tf-logos_transparent.png",
    "32": "icons/tf-logos_transparent.png",
    "64": "icons/tf-logos_transparent.png"
  },

  "permissions": ["cookies",
  "<all_urls>",
  "tabs",
  "storage",
  "http://*/*",
  "https://*/*"],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script/cookies_script.js"]
    }
  ]
}
